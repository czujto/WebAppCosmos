@page
@model YourApp.Pages.Records.CreateModel
           
           <h2>Create New Record</h2>
           
           <form method="post" enctype="multipart/form-data">
               <div class="form-group">
                   <label asp-for="Record.Title"></label>
                   <input asp-for="Record.Title" class="form-control" />
               </div>
           
               <div class="form-group">
                   <label asp-for="Record.Description"></label>
                   <textarea asp-for="Record.Description" class="form-control"></textarea>
               </div>
           
               <div class="form-group">
                   <label asp-for="Image">Upload Image</label>
                   <input type="file" asp-for="Image" class="form-control" accept="image/*" />
               </div>
           
               <div class="form-group">
                   <label asp-for="File">Upload File</label>
                   <input type="file" asp-for="File" class="form-control" />
               </div>
           
               <button type="submit" class="btn btn-primary">Create</button>
           </form>